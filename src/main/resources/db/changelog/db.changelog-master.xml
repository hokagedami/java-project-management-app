<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1" author="jim">
        <createTable tableName="employee">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false" primaryKeyName="employee_id_pk"/>
            </column>
            <column name="first_name" type="varchar(255)"/>
            <column name="last_name" type="varchar(255)"/>
            <column name="email" type="varchar(255)"/>
        </createTable>
        <createTable tableName="project">
            <column name="project_id" type="bigint">
                <constraints primaryKey="true" nullable="false" primaryKeyName="project_id_pk"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="stage" type="smallint"/>
            <column name="description" type="varchar(255)"/>
        </createTable>
        <createTable tableName="project_employee">
            <column name="project_id" type="bigint">
                <constraints nullable="false"
                             primaryKey="true"
                             referencedTableName="project"
                             foreignKeyName="project_id_pk"
                             validateForeignKey="true" />
            </column>
            <column name="employee_id" type="bigint">
                <constraints nullable="false" primaryKey="true"
                             referencedTableName="employee"
                             validateForeignKey="true"
                             foreignKeyName="employee_id_pk"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>